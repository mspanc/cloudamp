.modal-footer
  %button.btn{ :"data-dismiss" => "modal", :"aria-hidden" => "true" }
    Cancel
  
  -if modal_type == "new"
    %button.btn.btn-primary.btn-success{ :id => "modal_#{modal_type}_playlist_submit" }=submit
    
  -elsif modal_type == "edit"
    %button.btn.btn-primary{ :id => "modal_#{modal_type}_playlist_submit" }=submit

  -elsif modal_type == "remove"
    %button.btn.btn-primary.btn-danger{ :id => "modal_#{modal_type}_playlist_submit" }=submit

