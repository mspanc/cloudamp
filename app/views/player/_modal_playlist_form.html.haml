#modal_new_playlist.modal.fade.hide{ :tabindex => -1, :role => "dialog", :"aria-labelledby" => "modal_new_playlist_title", :"aria-hidden" => "true" }
  .modal-header
    %button.close{ :type => "button", :"data-dismiss" => "modal", :"aria-hidden" => "true" }
      Ã—
    %h3
      Add Playlist
  .modal-body
    %p
      Please name your new playlist and give it an optional description.

    .alert.alert-error.hide#modal_new_playlist_error_title_empty
      Title cannot be empty.
    .alert.alert-error.hide#modal_new_playlist_error_cannot_save
      Unable to save playlist due to internal server error, please try again.
      
    %form.form-horizontal
      .control-group
        %label#modal_new_playlist_label_title.control-label{ :for => "modal_new_playlist_form_title" }
          Title *
        .controls
          %input#modal_new_playlist_field_title{ :type => "text" }
      .control-group
        %label.control-label{ :for => "modal_new_playlist_form_description" }
          Description
        .controls
          %input#modal_new_playlist_field_description{ :type => "text" }
          
  .modal-footer
    %button.btn{ :"data-dismiss" => "modal", :"aria-hidden" => "true" }
      Cancel
    %button.btn.btn-primary#modal_new_playlist_submit
      Add playlist

