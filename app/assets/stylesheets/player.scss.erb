/*
 *= require twitter/bootstrap
 *= require fonts
 *= require_self
 */
 
$panel_background: #f5f5f5;
$panel_top_height: 40px;
$panel_side_width: 35%;
$panel_player_height: 166px;
$panel_padding: 14px;
$widget_background: #fff;
$widget_border_color: #ccc;
$widget_border: 1px solid $widget_border_color;
$widget_border_radius: 4px;
$flat_widget_height: 37px;
$search_button_width_total: 28px;
$search_button_width_without_padding: 16px;

$track_loading_background: #FCFCA6;
$track_playing_background: #ADFEA5;
$track_paused_background: #A5E3FE;

@mixin border-radius($radius) {
  border-radius: $radius;
  -moz-border-radius: $radius;
  -webkit-border-radius: $radius;
  -o-border-radius: $radius;
}




/* Common tweaks */
ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}


html, body.player {
  height: 100%;
  overflow: hidden;
}


/* Bootstrap fixes */
.nav-tabs > .active > a, .nav-tabs > .active > a:hover {
  border-color: $widget_border_color;
  border-bottom-color: transparent;
}


/* All forms */
.errorneous {
  color: #cc0000 !important;
}


.top {
  overflow: hidden;
  position: absolute;

  width: 100%;
  top: 0;
  left: 0;
  height: $panel_top_height;
  background: $panel_background;

  .container-fluid {
    padding: {
      left: $panel_padding;
      right: $panel_padding;
    }
  }
  
  .navbar-inner {
    padding: 0;
  }
  
  a.brand {
    font-weight: bold;
  }
  
  .authentication {
    form, form div {
      display: inline;
    }

    .btn {
      margin: {
        left: 14px;
        top: -2px;
      }
    }

    .username {
      font-weight: bold;
    }

    img {
      width: 24px;
      height: 24px;
      margin: {
        right: 4px;
        left: 6px;
      }
    }
  }  
}



/* Main app layout */

.main {
  position: absolute;
  top: $panel_top_height;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}


/* Player panel */
#panel_player {
  position: absolute;

  left: 0;
  bottom: 0;
  width: $panel_side_width;
  height: $panel_player_height + $panel_padding * 2;
  background: $panel_background;
  
  .embed {
    position: absolute;
    bottom: $panel_padding;
    right: $panel_padding;
    left: $panel_padding;
    top: $panel_padding;
    background: url('<%= image_path "player-placeholder.png" %>') no-repeat 50% 50%;
  }
  
  
}


/* Search panel */

#panel_search {
  position: absolute;
  left: 0;
  top: 0;
  bottom: $panel_player_height + $panel_padding;
  width: $panel_side_width;
  background: $panel_background;


  .search-box {
    position: absolute;
    left: $panel_padding;
    top: $panel_padding;
    right: $panel_padding;
    height: $flat_widget_height;
    
    .input-append {
      .field {
        position: absolute;
        top: 0;
        left: 0;
        right: $search_button_width_total - 1px + 14px;

        input {
          width: 100%;
        }
      }
      
      a {
        position: absolute;
        top: 0;
        width: $search_button_width_without_padding;
        right: 0;
      }
    }
  }

  .search-results {
    @include border-radius($widget_border_radius);

    position: absolute;
    left: $panel_padding;
    top: $flat_widget_height + $panel_padding + 1px;
    right: $panel_padding;
    bottom: $panel_padding;
    overflow-x: hidden;
    overflow-y: auto;
    
    background: #FCFCFC;
    border: 1px solid #CCC;
    
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -o-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    
    transition: border linear 0.2s, box-shadow linear 0.2s;
    
    table {
      width: 100%;    
    }
  }
}


/* Playlists panel */

#panel_playlists {
  position: absolute;
  left: $panel_side_width;
  top: 0;
  bottom: 0;
  right: 0;
  background: $panel_background;
  
  a.playlist-button {
    margin-left: 4px;
  }

  #panel_playlists_tabs {
    position: absolute;
    left: 0;
    top: $panel_padding;
    right: $panel_padding;
    height: $flat_widget_height;
  }

  #panel_playlists_contents {
    position: absolute;
    left: 0;
    top: $flat_widget_height + $panel_padding + 1px;
    right: $panel_padding;
    bottom: $panel_padding;
    background: $widget_background;
    border: {
      left: $widget_border;
      right: $widget_border;
      bottom: $widget_border;
    }

    .tab-pane {
      position: absolute;
      right: 0;
      left: 0;
      top: 0;
      bottom: 0;  
      overflow-x: hidden;
      overflow-y: auto;

      table {
        width: 100%;
        position: absolute;
      }
    }
  }
}



/* Tracks */
tr.track {
  td {
    padding: 8px;
  }

  td.artwork, td.artwork img {
    width: 24px;
    height: 24px;
  }

  td.duration {
    font-size: 75%;
    color: #666;
    text-align: right;
  }

  td.action {
    width: 40px;
    padding: 2px;
  }
  
  td.playlist-dragndrop-placeholder {
    -webkit-box-shadow: inset 2px 2px 7px -2px #ccc;
    box-shadow: inset 2px 2px 7px -2px #ccc; 
    background: #fcfcfc;
    
    border: {
      top: $widget_border;
      bottom: $widget_border;
    }
  }
}



tr.track:hover {
  cursor: move;
  background: #f0f0f0;
}

tr.track.loading {
  background: $track_loading_background;
}

tr.track.loading:hover {
  background: darken($track_loading_background, 10%);
}

tr.track.playing {
  background: $track_playing_background;
}

tr.track.playing:hover {
  background: darken($track_playing_background, 10%);
}

tr.track.paused {
  background: $track_paused_background;
}

tr.track.paused:hover {
  background: darken($track_paused_background, 10%);
}


/* Track remove icon should be visible only in playlist view and hidden while drag'n'drop */
#panel_search td.action-remove {
  display: none;
}

.track.ui-sortable-helper {
  background: #f0f0f0;
  border: $widget_border;
  @include border-radius($widget_border_radius);

  -moz-box-shadow: 2px 2px 6px #888;
  -webkit-box-shadow: 2px 2px 6px #888;
  -o-box-shadow: 2px 2px 6px #888;
  box-shadow: 2px 2px 6px #888;    
  
  -moz-opacity: 0.8;
  -webkit-opacity: 0.8;
  -o-opacity: 0.8;
  opacity: 0.8;  
  
  td.action, td.duration {
    display: none;
  }
}


/* Spinner icon for tracks that are during loading */
.icon-spinner {
  background: url('<%= image_path "spinner.gif" %>');
}


/* Message about empty playlist */
#panel_playlists_contents tr.message-empty td {
  font-size: 200%;
  color: #999;
  text-align: center;
}

#panel_playlists_contents tr.message-empty .text {
  @include border-radius(12px);

  line-height: 150%;
  border: 2px dashed #ccc;
  padding: 20px;
  margin: 20px;
}
