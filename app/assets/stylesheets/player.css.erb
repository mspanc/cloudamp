/* Common tweaks */

ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}


html, body.player {
  height: 100%;
  overflow: hidden;
}


/* All forms */
.errorneous {
  color: #cc0000 !important;
}




/* Top bar */

.top {
  background: #000;
  color: #fff;
  overflow: hidden;

  position: absolute;

  width: 100%;
  top: 0;
  left: 0;
  height: 60px;
}

.top .logo {
  margin-left: 14px;
  margin-top: 10px;
  font-size: 28pt;
  font-weight: normal;
  color: #C11C0C;
}

.top .authentication {
  margin-right: 14px;
  margin-top: 16px;
}

.top .authentication form, .top .authentication form div {
  display: inline;
}

.top .authentication .btn {
  margin-left: 14px;
}

.top .authentication .username {
  font-weight: bold;
}

.top .authentication img {
  width: 24px;
  height: 24px;
  margin-right: 4px;
  margin-left: 6px;
}



/* Main app layout */

.main {
  position: absolute;
  top: 60px;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}


/* Search panel */

#panel_search {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 35%;  
}


#panel_search .search-box {
  position: absolute;
  left: 14px;
  top: 14px;
  right: 14px;
  height: 40px;
}

#panel_search .search-results {
  position: absolute;
  left: 14px;
  top: 54px;
  right: 14px;
  bottom: 14px;
  overflow-x: hidden;
  overflow-y: auto;
}


/* Playlists panel */

#panel_playlists {
  position: absolute;
  left: 35%;
  top: 0;
  bottom: 0;
  right: 0;  
}

#panel_playlists_tabs {
  position: absolute;
  left: 14px;
  top: 14px;
  right: 14px;
  height: 40px;
}

#panel_playlists_contents {
  position: absolute;
  left: 14px;
  top: 54px;
  right: 14px;
  bottom: 14px;
}

#panel_playlists_contents .tab-pane {
  background: yellow;
}

#panel_playlists_contents .tab-pane table {
  width: 100%;
  position: absolute;
  right: 0;
  left: 0;
  top: 0;
  bottom: 0;  
  overflow-x: hidden;
  overflow-y: auto;
}


/* Player panel */
#panel_player {
  position: absolute;

  top: 0;
  width: 300px;
  height: 60px;
  left: 50%;
  margin-left: -150px;
  
  background: red;
  
}


/* Tracks */
tr.track td {
  padding: 8px;
}

tr.track:hover {
  cursor: move;
  background: #f0f0f0;
}


tr.track td.artwork, tr.track td.artwork img {
  width: 24px;
  height: 24px;
}

tr.track td.duration {
  font-size: 75%;
  color: #666;
  text-align: right;
}

tr.track td.action {
  width: 40px;
  padding: 2px;
}




/* Track remove icon should be visible only in playlist view and hidden while drag'n'drop */
#panel_search td.action-remove {
  display: none;
}

.track.ui-sortable-helper {
  background: #f0f0f0;
}

.track.ui-sortable-helper td.action, .track.ui-sortable-helper td.duration {
  display: none;
}


/* Spinner icon for tracks that are during loading */
.icon-spinner {
  background: url('<%= image_path "spinner.gif" %>');
}


/* Message about empty playlist */
#panel_playlists_contents tr.message-empty td {
  font-size: 200%;
  color: #999;
  text-align: center;
}

#panel_playlists_contents tr.message-empty .text {
  line-height: 150%;
  border: 2px dashed #ccc;
  border-radius: 12px;
  -moz-border-radius: 12px;
  -webkit-border-radius: 12px;
  -o-border-radius: 12px;
  padding: 20px;
  margin: 20px;
}
